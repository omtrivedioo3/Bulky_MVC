@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel


<div class="container">
    <div class="row pt-4 pb-3">
         <div class="col-6">
                <h2 class="text-primary">
                    Category List
                </h2>
         </div>
        <div class="col-6 text-end">
           @* Razor page routing  *@
           <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
           </a>
        </div>
    </div>
    <table class="table table-bordered border-secondary  table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @* razore page model *@
            @foreach(var  obj in Model.CategoryList.OrderBy(e => e.DisplayOrder))
            {
                <tr>
                    <th>
                        @obj.Name
                    </th>
                    <th>
                        @obj.DisplayOrder
                    </th>
                    <th>
                        <div class="w-75  btn-group" role="group">
                             @* asp-route-id pass id parameter *@
                            <a asp-page="/Categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="/Categories/Delete" asp-route-id="@obj.Id"  class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                        </div>
                    </th>
                </tr>   
            }
        </tbody>
    </table>
</div>